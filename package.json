  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start-command": "set SCOPE=prod & nest start command",
    "start-querie": "set SCOPE=prod & nest start querie",
    "start-proxy": "set SCOPE=prod & nest start proxy",
    "start-proxy:dev": "set SCOPE=dev & nest start proxy --watch",
    "start-command:dev": "set SCOPE=dev & nest start command --watch",
    "start-querie:dev": "set SCOPE=dev & nest start querie --watch",
    "start-jwt:dev": "set SCOPE=dev & nest start jwt --watch",
    "start-proxy:debug": "set SCOPE=dev & nest start proxy --watch --debug",
    "start-command:debug": "set SCOPE=dev & nest start command --watch --debug",
    "start-querie:debug": "set SCOPE=dev & nest start querie --watch --debug",
    "start-jwt:debug": "set SCOPE=dev & nest start jwt --watch --debug",
    "start:prod": "node dist/apps/medical-appointments/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/command/test/jest-e2e.json"
  },
